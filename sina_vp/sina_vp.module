      privatemsg_message_change_status($pmid, PRIVATEMSG_READ, $thread['user']);
    }
		//dpm($message);
		$mid = $message['mid'];
		global $user;
		$participant_user = $message['author'];
		if($participant_user->uid==$user->uid){//当前用户自己靠右
			$side = 'R';		
		}else{$side = 'L';}
    //$output .= theme('privatemsg_view', $message);
    
